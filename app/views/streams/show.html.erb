<div class="container clearfix">
    <h1><%= @stream_title %> </h1>
    <div class="poster-name">
        Posted by: <%= @users.find(@streams.find(params[:id]).user_id).name %>
    </div>

    <div class="post-stream">
        <% @posts.each do |posts| %>
            <div class="card" id="<%= posts.id %>">
                <div class="profile">
                    <h4><a href="/users/<%= User.find(posts.user_id).id %>"><%= User.find(posts.user_id).name %></a></h4>
                    <p>Last seen: <%= User.find(posts.user_id).last_sign_in_at %></p>
                </div>
                    <div class="post-content">
                        <p><%= posts.content %></p>
                    </div>
                    <div class="post-footer"><p>Posted: <%= posts.created_at %></p></div>
            </div>
        <% end %>
    </div>
    <div style="clear:both"></div>
</div>

<div class="container">

            <a href="/board/<%= @board_id %>/streams/"/>
                <div class="bot_nav button">
                    <h3> <<< Back to <%= @board_name %></h3>
                </div>
            </a>
            <a href="/board/<%= @board_id %>/streams/<%= @stream_id %>/post/new">
                <div class="bot_nav button">
                    <h3>Reply to Thread</h3>
                </div>
            </a>
</div>
